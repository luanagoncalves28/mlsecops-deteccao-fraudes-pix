# Bucket para dados do projeto
resource "google_storage_bucket" "data_bucket" {
  name          = "mlsecops-dados-${var.project_id}-${var.environment}"
  location      = var.region
  storage_class = "STANDARD"
  
  uniform_bucket_level_access = true
  
  versioning {
    enabled = true
  }
  
  lifecycle_rule {
    condition {
      age = 90
    }
    action {
      type = "Delete"
    }
  }
  
  labels = var.labels
}

# Bucket para modelos de ML
resource "google_storage_bucket" "models_bucket" {
  name          = "mlsecops-modelos-${var.project_id}-${var.environment}"
  location      = var.region
  storage_class = "STANDARD"
  
  uniform_bucket_level_access = true
  
  versioning {
    enabled = true
  }
  
  labels = var.labels
}

# Bucket para arquivos temporários do processamento
resource "google_storage_bucket" "temp_bucket" {
  name          = "mlsecops-temp-${var.project_id}-${var.environment}"
  location      = var.region
  storage_class = "STANDARD"
  
  uniform_bucket_level_access = true
  
  lifecycle_rule {
    condition {
      age = 7
    }
    action {
      type = "Delete"
    }
  }
  
  labels = var.labels
}