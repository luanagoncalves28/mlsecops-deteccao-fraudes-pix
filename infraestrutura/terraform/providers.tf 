terraform {
  required_providers {
    google = {
      source  = "hashicorp/google"
      version = "~> 4.83.0"
    }
  }
  
  # Configuração de backend para armazenar o estado no Google Cloud Storage
  # Este backend será inicializado após a criação do bucket via console
  backend "gcs" {
    bucket = "mlsecops-deteccao-fraudes-pix-tfstate"
    prefix = "terraform/state"
  }
  
  required_version = ">= 1.5.0"
}

provider "google" {
  project     = var.project_id
  region      = var.region
  zone        = var.zone
  credentials = file(var.credentials_file)
}

provider "google-beta" {
  project     = var.project_id
  region      = var.region
  zone        = var.zone
  credentials = file(var.credentials_file)
}